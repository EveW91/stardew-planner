<%= form_with url: search_recipes_path, method: :get, data: { turbo_frame: "results"} do |form| %>
  <%= form.search_field :recipe_search, placeholder: "Item search", oninput: "this.form.requestSubmit()" %>
  <%= form.submit "Search", style: "display: none;" %>
<% end %>

<turbo-frame id="results">
  <%= render "recipes/results", recipes: @recipes %>
</turbo-frame>
